<div id="new_team">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<header>
				<h2 class="text-center">Crie seu time!</h2>
			</header>
			<hr>
			<section>			
				<form role="form">
	  				<div class="row">
				        <div class="col-md-4 col-md-offset-1">
				          <div class="form-group">
				            <label for="username">Escolha um nome para seu time</label>
				            <input type="text" class="form-control" id="name" name="name" placeholder="Digite aqui o nome do seu time">
				          </div>
				          <div class="form-group">
				            <label for="role">Selecione as posições que faltam</label>
				            <select type="text" class="form-control chosen-select" id="role" name="role[]" multiple data-placeholder="Top, Mid, ADC">
				              {{#each positions}}
				                <option value="{{name}}">{{alternativeName}}</option>
				              {{/each}}
				            </select>
				          </div>
				        </div>
				        <div class="col-md-6">
				          <div class="form-group">
				            <label for="tier">Liga minima</label>
				            <div class="row tiers">
				              <input type="hidden" id="tier" name="tier" value="unranked">
				              <div class="col-xs-2 col-md-3 chevron-left">
				                <i class="fa fa-chevron-left fa-4x"></i>
				              </div>
				              <div class="col-xs-8 col-md-6 tier-list">
				                {{#each tiers}}
				                <div class="tier {{current}}" data-value="{{name}}">
				                  <div class="thumbnail">
				                    <img src="assets/images/tiers/{{name}}.png" alt="{{alternativeName}}">
				                    <div class="caption">
				                      <h3>{{alternateName}}</h3>
				                      <p>
				                        {{description}}
				                      </p>
				                    </div>
				                  </div>
				                </div>
				                {{/each}}
				              </div>
				              <div class="col-xs-2 col-md-3 chevron-right">
				                <i class="fa fa-chevron-right fa-4x"></i>
				              </div>
				            </div>
				          </div>
				        </div>
				      </div>
				      <div class="row">
				        <div class="col-md-10 col-md-offset-5">
				          <div class="form-group">
				            <button type="submit" class="btn btn-success">Inscrever-se</button>
				            <a href="#" data-href="users/dashboard">Retornar</a>
				          </div>
				        </div>
				      </div>

				</form>
			</section>
		</div>
	</div>
</div>